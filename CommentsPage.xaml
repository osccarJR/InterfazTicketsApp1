<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterfazTicketsApp.CommentsPage"
             Title="Comentarios y Valoraciones">
    <StackLayout Padding="10">
        <Label Text="Comentarios y Valoraciones" FontSize="24" FontAttributes="Bold" />
        <ListView x:Name="CommentsListView" ItemsSource="{Binding Comments}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="5">
                            <Label Text="{Binding UserName}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding CommentText}" FontSize="16" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Entry Placeholder="Escribe un comentario..." Text="{Binding NewComment}" />
        <Button Text="Enviar" Command="{Binding SubmitCommentCommand}" />
    </StackLayout>
</ContentPage>
