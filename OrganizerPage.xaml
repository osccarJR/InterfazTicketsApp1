<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterfazTicketsApp.OrganizerPage"
             Title="Gestión de Eventos">
    <StackLayout Padding="10">
        <Label Text="Gestión de Eventos" FontSize="24" FontAttributes="Bold"/>
        <Button Text="Crear Nuevo Evento" />
        <ListView x:Name="OrganizerEventsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding EventName}" Detail="{Binding EventDate}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
