<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterfazTicketsApp.PurchasePage"
             Title="Compra de Tickets">
    <Grid>
        <Image Source="interfaz.JPG" Aspect="AspectFill"
        HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
        <StackLayout Padding="10">
            <Label Text="Compra de Tickets" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding EventName}" FontSize="18" TextColor="Black" />
            <Label Text="{Binding EventDate}" FontSize="18" TextColor="Black"/>
            <Label Text="{Binding EventLocation}" FontSize="18" TextColor="Black"/>
            <Entry Placeholder="Cantidad de tickets" Keyboard="Numeric" TextColor="Black"/>
            <Entry Placeholder="Nombre en la tarjeta" TextColor="Black"/>
            <Entry Placeholder="Número de tarjeta" Keyboard="Numeric" TextColor="Black"/>
            <Entry Placeholder="Fecha de expiración (MM/AA)" Keyboard="Numeric" TextColor="Black"/>
            <Entry Placeholder="CVC" Keyboard="Numeric" TextColor="Black"/>
            <Button Text="Comprar" Command="{Binding ConfirmPurchaseCommand}" />
        </StackLayout>
    </Grid>
</ContentPage>
